@model LibraryMvc.DTOs.AuthorReadDto

<h2>Author Details</h2>

<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Birth Date</dt>
    <dd class="col-sm-10">@Model.BirthDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Nationality</dt>
    <dd class="col-sm-10">@Model.Nationality</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.AuthorID" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
