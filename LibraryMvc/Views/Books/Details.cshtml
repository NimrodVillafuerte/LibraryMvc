@model LibraryMvc.DTOs.BookReadDto

<h2>Book Details</h2>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Publish Date</dt>
    <dd class="col-sm-10">@Model.PublishDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Publisher</dt>
    <dd class="col-sm-10">@Model.PublisherName</dd>

    <dt class="col-sm-2">Genre</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Pages</dt>
    <dd class="col-sm-10">@Model.Pages</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-primary">Edit</a> |
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
