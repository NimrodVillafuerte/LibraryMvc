@model LibraryMvc.DTOs.BookUpdateDto

<h2>Edit Book</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="BookID" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PublishDate"></label>
        <input asp-for="PublishDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PublisherID"></label>
        <input asp-for="PublisherID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pages"></label>
        <input asp-for="Pages" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

